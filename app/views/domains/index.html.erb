<p id="notice"><%= notice %></p>



<%= form_tag(:controller => :domains, :action => :search, :class => "navbar-form navbar-left") do %>
  <div class="col-lg-3" style="margin-left: 500px;">
    <div class="input-group custom-search-form">
      <%= text_field_tag :name, params[:name], placeholder: "Search Domain", :class => "form-control" %>
      <span class="input-group-btn">
        <%= button_tag(type: 'submit', class: 'btn btn-primary') do %>
          <span class="glyphicon glyphicon-search"></span>
        <% end %>
      </span>
    </div><!-- /input-group -->
  </div> <!-- //col-lg-3 -->
<% end %>


<table class="table striped table-bordered">
  <thead>
    <tr>
      <th colspan="1">Domain name</th>
      <th colspan="1">Avaialbility</th>
    </tr>
  </thead>

  <tbody>
    <% @list.each do |domain,avl| %>
      <tr>
        <td><%= domain %> </td>
        <td><%= avl %> </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>


<table class="table">
  <thead>
    <tr>
      <th colspan="3">Search History</th>
    </tr>
  </thead>

  <tbody>
    <% @history.each do |domain| %>
      <tr>
        <td><%= domain  %> </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

